{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffff00",
          "style": "plain",
          "type": "python",
          "template": "{{if .Venv}}{{end}} "
        },
        {
          "foreground": "#185df1",
          "powerline_symbol": "",
          "style": "powerline",
          "template": " \uf0e7",
          "type": "root"
        },
        {
          "foreground": "#12ae43",
          "powerline_symbol": "",
          "style": "powerline",
          "template": "[{{ .UserName }}]",
          "type": "session"
        },
        {
          "foreground": "#dc7cf9",
          "powerline_symbol": "-",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "powerline",
          "template": "[\ue5ff {{ .Path }}]",
          "type": "path"
        },
        {
          "foreground": "#3A86FF",
          "powerline_symbol": "-",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": "[{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}]",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#33DD2D",
          "style": "plain",
          "type": "python",
          "template": "{{if .Venv}}(venv){{end}} "
        },
        {
          "foreground": "#f1184c",
          "style": "plain",
          "template": "\u279c ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}